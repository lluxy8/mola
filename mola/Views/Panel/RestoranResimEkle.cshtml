@model mola.Models.RestoranResim

@{
    Layout = "_LayoutPanel";
}

<h2>Restoran Resim Ekle</h2>

<form class=" d-grid gap-3" asp-action="RestoranResimEkle" method="post">
    <input class="form-control" asp-for="ResimUrl" type="text" placeholder="Resim Url" />
    <select asp-for="RestoranId" class="form-select" aria-label="Default select example">
        <option value="0" selected>Restoran Seçiniz.</option>
        @foreach (var i in @ViewBag.Restorans)
        {
            <option value="@i.Id">@i.Baslik</option>
        }
    </select>
    <button class="btn btn-primary">Ekle</button>
</form>