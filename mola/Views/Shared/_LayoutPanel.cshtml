<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mola</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css">
    <style>
        html, body {
            min-height: 100vh!important;
        }
        .mh100{
            min-height: 100vh !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex p-0 gap-3">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
            <a asp-controller="Panel" asp-action="Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none px-3">
                <img src="~/images/logolight.svg" />
            </a>
            <hr>


            <ul class="nav nav-pills flex-column mb-auto">
                <li>
                    <a class="nav-link text-white" data-bs-toggle="collapse" href="#collapseRestoran" role="button" aria-expanded="false" aria-controls="collapseRestoran">
                        Restoran
                        <i class="bi bi-chevron-down float-end"></i> <!-- Ok ikonu -->
                    </a>
                    <div class="collapse" id="collapseRestoran">
                        <ul class="nav flex-column ps-3">
                            <li><a asp-controller="Panel" asp-action="RestoranEkle" class="nav-link text-white">Restoran Ekle</a></li>
                            <li><a asp-controller="Panel" asp-action="RestoranResimEkle" class="nav-link text-white">Restoran Resim Ekle</a></li>
                            <li><a asp-controller="Panel" asp-action="RestoranSil" class="nav-link text-white">Restoran Sil</a></li>
                        </ul>
                    </div>
                </li>


                <li>
                    <a class="nav-link text-white" data-bs-toggle="collapse" href="#collapseOrders" role="button" aria-expanded="false" aria-controls="collapseOrders">
                        Spa
                        <i class="bi bi-chevron-down float-end"></i> <!-- Ok ikonu -->
                    </a>
                    <div class="collapse" id="collapseOrders">
                        <ul class="nav flex-column ps-3">
                            <li><a asp-controller="Panel" asp-action="SpaEkle" class="nav-link text-white">Spa Ekle</a></li>
                            <li><a asp-controller="Panel" asp-action="SpaResimEkle" class="nav-link text-white">Spa Resim Ekle</a></li>
                            <li><a asp-controller="Panel" asp-action="SpaSil" class="nav-link text-white">Spa Sil</a></li>
                        </ul>
                    </div>
                </li>


                <li>
                    <a class="nav-link text-white" data-bs-toggle="collapse" href="#collapseProducts" role="button" aria-expanded="false" aria-controls="collapseProducts">
                        Etkinlik
                        <i class="bi bi-chevron-down float-end"></i> <!-- Ok ikonu -->
                    </a>
                    <div class="collapse" id="collapseProducts">
                        <ul class="nav flex-column ps-3">
                            <li><a asp-controller="Panel" asp-action="EtkinlikEkle" class="nav-link text-white">Etkinlik Ekle</a></li>
                            <li><a asp-controller="Panel" asp-action="EtkinlikResimEkle" class="nav-link text-white">Etkinlik Resim Ekle</a></li>
                            <li><a asp-controller="Panel" asp-action="EtkinlikSil" class="nav-link text-white">Etkinlik Sil</a></li>
                        </ul>
                    </div>
                </li>
            </ul>

            <hr>

            <span class="text-center">@DateTime.Now.Day / @DateTime.Now.Month / @DateTime.Now.Year</span>
        </div>

        <div class="container p-0 mh100">
            <main role="main" class="m-5">
                @RenderBody()
            </main>
        </div>

    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        var collapseElements = document.querySelectorAll('.collapse');

        collapseElements.forEach(function(collapseElement) {
            collapseElement.addEventListener('show.bs.collapse', function() {
                var icon = collapseElement.previousElementSibling.querySelector('i');
                icon.classList.remove('bi-chevron-down');
                icon.classList.add('bi-chevron-up');
            });

            collapseElement.addEventListener('hide.bs.collapse', function() {
                var icon = collapseElement.previousElementSibling.querySelector('i');
                icon.classList.remove('bi-chevron-up');
                icon.classList.add('bi-chevron-down');
            });
        });
    </script>

    <script>
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 4,
            spaceBetween: 30,
            centeredSlides: true,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    </script>
</body>
</html>
